<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.RadioButton?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.vlinx.java.wrapper.ui.UIController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="btnStart" text="Start"/>
                <Button fx:id="btnGuide" text="Guide"/>
                <Button fx:id="btnAbout" text="About"/>
            </items>
            <padding>
                <Insets bottom="15" left="10.0" right="10.0" top="15"/>
            </padding>
        </ToolBar>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab fx:id="tabBasicInfo" text="Basic Information">
                    <content>
                        <GridPane alignment="TOP_LEFT" hgap="15.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <children>
                                <Label text="App Folder:"/>
                                <TextField fx:id="txtAppFolder" GridPane.columnIndex="1"/>
                                <Button fx:id="btnAppFolder" text="Browse..." GridPane.columnIndex="2"/>
                                <Label text="JRE Folder:" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtJreFolder" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Button fx:id="btnJreFolder" text="Browse..." GridPane.columnIndex="2"
                                        GridPane.rowIndex="1"/>
                                <AnchorPane GridPane.columnSpan="3" GridPane.rowIndex="2">
                                    <children>
                                        <RadioButton fx:id="btnMainJarMode" layoutY="5.0" text="MainJar Mode"/>
                                        <RadioButton fx:id="btnMainClassMode" layoutX="138.0" layoutY="5.0"
                                                     text="MainClass Mode"/>
                                    </children>
                                </AnchorPane>
                                <Label text="Main Jar:" GridPane.rowIndex="3"/>
                                <TextField fx:id="txtMainJar" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="3"/>
                                <Label text="Main Class:" GridPane.rowIndex="4"/>
                                <TextField fx:id="txtMainClass" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="4"/>
                                <VBox prefWidth="100.0" GridPane.columnSpan="3" GridPane.rowIndex="5">
                                    <children>
                                        <Label text="Classpath:"/>
                                        <TextArea fx:id="txtClasspath" prefHeight="100.0" prefWidth="200.0"
                                                  wrapText="true">
                                            <VBox.margin>
                                                <Insets top="10.0"/>
                                            </VBox.margin>
                                        </TextArea>
                                    </children>
                                </VBox>
                                <Label text="Executable Name:" GridPane.rowIndex="6"/>
                                <TextField fx:id="txtExeName" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="6"/>
                                <Label text="Output Folder:" GridPane.rowIndex="7"/>
                                <TextField fx:id="txtOutputFolder" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                                <Button fx:id="btnOutputFolder" text="Browse..." GridPane.columnIndex="2"
                                        GridPane.rowIndex="7"/>
                                <CheckBox fx:id="ckHideConsole" text="Hide Console" GridPane.columnSpan="3"
                                          GridPane.rowIndex="8"/>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0" top="30.0"/>
                            </padding>
                        </GridPane>
                    </content>
                </Tab>
                <Tab fx:id="tabExeInfo" text="Windows Executable Information">
                    <content>
                        <GridPane alignment="TOP_LEFT" hgap="15.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <children>
                                <Label text="Icon:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="txtIcon" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Button fx:id="btnIcon" text="Browse..." GridPane.columnIndex="2"
                                        GridPane.rowIndex="0"/>
                                <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtProductName" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="1"/>
                                <Label text="File Version:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtFileVersion" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="2"/>
                                <Label text="File Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="txtFileDescription" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="3"/>
                                <Label text="Product Version:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextField fx:id="txtProductVersion" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="4"/>
                                <Label text="Company Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <TextField fx:id="txtCompanyName" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="5"/>
                                <Label text="Legal Copyright:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                                <TextField fx:id="txtCopyright" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                           GridPane.rowIndex="6"/>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0" top="30.0"/>
                            </padding>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>
